    <hr />
    <dl class="row">
        
        <dt class = "control-label col-dm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

       <dt class = "control-label col-dm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
